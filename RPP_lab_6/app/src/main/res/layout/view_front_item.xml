<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/front_image"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:tint="@color/imageColor"
                tools:src="@drawable/ic_image_other" />

            <TextView
                android:id="@+id/front_text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="@style/TextAppearance.AppCompat.Headline"
                tools:text="Крутой монитор sfn kjfgsk skj hks hkdsjf hksdfjh" />

            <TextView
                android:id="@+id/front_text_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="46 в наличии"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/front_text_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center_vertical"

                    style="@style/TextAppearance.AppCompat.Title"

                    tools:text="$99"
                    tools:ignore="RtlCompat" />

                <Button
                    android:id="@+id/front_buy_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buy_btn_text"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>